<!-- Информация пользователя -->
<a asp-controller="Cart" asp-action="Index" class="navbar-text ms-auto">
    @await Component.InvokeAsync("Cart") <i class="fa-solid fa-cart-shopping"></i> (0)
</a>

<div class="dropdown ms-4 nav-color">
    <button class="btn btn-secondary dropdown-toggle"
            type="button" id="dropdownMenuButton"
            data-bs-toggle="dropdown"
            aria-expanded="false">
        User@gmail.com
        <img src="~/images/1.jpg" width="30"
             alt="User" class="rounded nav-color" />
    </button>
    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <li>
            <span class="dropdown-item-text">
                <img src="~/images/1.jpg"
                     width="50" alt="User" class="rounded" />
                user@gmail.com
            </span>
        </li>

        <li><hr class="dropdown-divider"></li>

        <li>
            <form id="logoutForm" class="form-inline">
                <button id="logout" type="submit" asp-controller="Indentity" asp-action="LogOut" class="nav-link
                                    btn btn-link text-dark">
                    Logout
                </button>
            </form>
        </li>
    </ul>
</div>
