﻿<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>@ViewBag.Title</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/font-awesome/all.min.css" />
        <link href="~/font-awesome/css/fontawesome.css" rel="stylesheet">
        <link href="~/font-awesome/css/brands.css" rel="stylesheet">
        <link href="~/font-awesome/css/solid.css" rel="stylesheet">
    </head>

    <body>
        <header>
            @addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

            <div class="container">
                <!-- Панель навигации -->
                <nav class="navbar navbar-expand-md navbar-dark bg-dark">
                    <partial name="_MenuPartial" />
                    <partial name="_UserInfoPartial" />
                </nav> <!-- Панель навигации - конец -->
            </div><!-- container - конец -->
        </header><!-- header - конец -->

        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="footer">
            <div class="container">
                <div class="navbar navbar-dark navbar-expand-md bg-dark">
                    <p class="footer-color">&copy; 2023 - Web_153503_Zviahintsava - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></p>
                    <nav class="navbar-nav ms-auto">

                        <a class="nav-item nav-link" href="http://www.facebook.com">
                            <i class="fa-brands fa-facebook-f"></i>
                        </a>

                        <a class="nav-item nav-link" href="http://www.vk.com">
                            <i class="fa-brands fa-vk"></i>
                        </a>

                        <a class="nav-item nav-link" href="http://www.twitter.com">
                            <i class="fa-brands fa-twitter"></i>
                        </a>

                    </nav>
                </div>
            </div>
        </footer>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>